#set -x

USER=__USER__

usage() {
  echo "usage: $0 <dir>"
  exit 0
};# usage()

if [ -z $1 ]; then
  usage
else
  case "$1" in
    --help)     usage
                ;;
  esac
fi

find $1 -type d -exec chmod a+rx {} \;
find $1 -type f -exec chmod a+r {} \;
find $1 -type d -exec chown ${USER}:${USER} {} \;
find $1 -type f -exec chown ${USER}:${USER} {} \;

